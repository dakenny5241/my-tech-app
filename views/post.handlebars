<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
  </head>
  <body>
    <h1>{{title}}</h1>
    <p>{{date}}</p>
    <p>{{content}}</p>

    <h2>Comments</h2>
    {{#each comments}}
      <p><strong>{{user}}</strong>: {{text}} ({{date}})</p>
    {{/each}}

    <form action="/post/{{id}}/comment" method="post">
      <input type="text" name="comment" placeholder="Leave a comment...">
      <input type="submit" value="Submit">
    </form>
  </body>
</html>